{
	"compilerOptions": {
		"strict": true,
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": false,
		"sourceMap": true,
		"declaration": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}